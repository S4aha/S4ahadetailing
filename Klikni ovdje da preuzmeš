<body>

<header>
  <h1>S4aha Detailing</h1>
</header>

<section>
  <div class="paket">
    <h2>Poliranje farova - <span id="cijena-farova">40 KM</span></h2>
    <label><input type="checkbox" id="keramicka"> Keramička zaštita (+10 KM)</label>
  </div>
  <div class="paket">
    <h2>Normal paket - <span id="cijena-normal">80 KM</span></h2>
    <label><input type="checkbox" id="keramicka-normal"> Keramička zaštita (+20 KM)</label>
  </div>
  <div class="paket">
    <h2>Full paket - <span id="cijena-full">180 KM</span></h2>
    <label><input type="checkbox" id="keramicka-full"> Keramička zaštita (+20 KM)</label>
  </div>

  <button onclick="otvoriPopup()">Rezerviši</button>
</section>

<div class="popup" id="popup">
  <form onsubmit="event.preventDefault(); zatvoriPopup();">
    <h2>Rezervacija</h2>
    <input type="text" placeholder="Ime i prezime" required>
    <input type="text" placeholder="Broj telefona" required>
    <input type="text" placeholder="Grad" required>
    <textarea placeholder="Poruka" required></textarea>
    <button type="submit">Rezerviši</button>
  </form>
</div>

<script>
  const keramicka = document.getElementById('keramicka');
  const keramickaNormal = document.getElementById('keramicka-normal');
  const keramickaFull = document.getElementById('keramicka-full');

  keramicka.addEventListener('change', function () {
    document.getElementById('cijena-farova').textContent = this.checked ? '50 KM' : '40 KM';
  });

  keramickaNormal.addEventListener('change', function () {
    document.getElementById('cijena-normal').textContent = this.checked ? '100 KM' : '80 KM';
  });

  keramickaFull.addEventListener('change', function () {
    document.getElementById('cijena-full').textContent = this.checked ? '200 KM' : '180 KM';
  });

  function otvoriPopup() {
    document.getElementById('popup').style.display = 'flex';
  }

  function zatvoriPopup() {
    document.getElementById('popup').style.display = 'none';
  }
</script>

</body>
</html>
